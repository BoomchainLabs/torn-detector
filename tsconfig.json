{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./out",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["out", "node_modules"],
  "include": [
    "./test",
    "./src"
  ]
}
